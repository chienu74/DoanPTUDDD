<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: Back & Edit -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back button"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                />

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit button"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop = "14dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="center_horizontal"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="106dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/avatar_border"
                android:contentDescription="Avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" />
        </androidx.cardview.widget.CardView>
        <!-- Thông tin cơ bản -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGUYEN VAN A"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh hiệu: Bất Nhập Lưu Vô Giả"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kinh nghiệm: 0/100"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />

        <!-- Các ô nhập thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <!-- Họ và tên -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="8dp"
                android:text="Họ và tên"
                android:textColor="@color/primary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#4796FB"
                android:hint="Nguyễn Văn A"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Số điện thoại -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="8dp"
                android:text="Số điện thoại"
                android:textColor="@color/primary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#4796FB"
                android:hint="0909 456 789"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Ngày sinh -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="8dp"
                android:text="Ngày sinh"
                android:textColor="@color/primary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/birthDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#4796FB"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:focusable="false"
                android:hint="01/01/1990"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Khu vực -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="8dp"
                android:text="Khu vực"
                android:textColor="@color/primary"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/areaSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/area_list" />

            <!-- Địa chỉ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="8dp"
                android:text="Địa chỉ"
                android:textColor="@color/primary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#4796FB"
                android:hint="Cửa Lò, TP Vinh, Nghệ An"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
