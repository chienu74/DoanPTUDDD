<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Mô tả -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:text="Hoàn tất tài khoản 📋"
            android:textColor="#4796FB"
            android:textFontWeight="700"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đừng lo. Chỉ có bạn mới nhìn thấy được dữ liệu cá nhân, không ai có thể thấy được ngoại trừ bạn."
            android:textSize="16sp"
            android:textColor="#2E2E2E"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp" />

        <!-- Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_logo" />
        </androidx.cardview.widget.CardView>

        <!-- Họ và tên -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            android:textSize="20sp"
            android:backgroundTint="#4796FB"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"/>

        <!-- Số điện thoại -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:backgroundTint="#4796FB"
            android:text="0909 456 789"
            android:padding="12dp"/>

        <!-- Ngày sinh -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/birthDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary"
            android:text="01/01/1990"
            android:padding="12dp"
            android:textSize="20sp"
            android:backgroundTint="#4796FB"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:focusable="false"/>


        <Button
            android:id="@+id/continueButton"
            style="@style/btn_start"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="Tiếp tục"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
