<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF3700B3" /> <!-- Darker shade when pressed -->
            <corners android:radius="8dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <!-- Normal state -->
    <item>
        <shape>
            <solid android:color="#FF6200EE" /> <!-- Primary color, vibrant purple -->
            <corners android:radius="8dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>